{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "baseUrl": "./",
    "paths": {
      "@definitions/*": ["./src/core/definitions/*"],
      "@services/*": ["./src/core/services/*"]
    },
    "types": ["node", "svelte"]
  }
}
